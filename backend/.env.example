# LLM Configuration
# These are the default LLM settings used when no configs exist in the database

# Default config name
LLM_DEFAULT_NAME=Default

# LLM API base URL (OpenAI compatible endpoint, must include /v1)
LLM_BASE_URL=http://localhost:8000/v1

# API key for the LLM service
LLM_API_KEY=

# Model name to use
LLM_MODEL=gpt-3.5-turbo

# Maximum tokens for response
LLM_MAX_TOKENS=4096

# Temperature for generation (0.0 - 2.0)
LLM_TEMPERATURE=0.2

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=podcast

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-in-production

# Task Queue
TASK_WORKERS=3

# RSS Configuration
RSS_TIMEOUT=30

# AssemblyAI (for transcription)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key
